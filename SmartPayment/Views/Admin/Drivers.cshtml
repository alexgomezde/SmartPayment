@model List<SmartPayment.Models.ViewModels.DriversTableViewModel>
@{

}

<h2>Choferes</h2>
<div class="row">
    <div class="col-md-12 table-responsive">
        <h2>@ViewBag.Title</h2>
        <table class="table  table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Identificación</th>
                    <th>Correo Electrónico</th>
                    <th>Nombre</th>
                    <th>Primer Apellido</th>
                    <th>Segundo Apellido</th>
                    <th>Fecha de Nacimiento</th>
                    <th>Editar</th>
                    <th>Deshabilitar</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var elemento in Model)
                {
                    <tr class="text-center">
                        <td>@elemento.Id</td>
                        <td>@elemento.Email</td>
                        <td>@elemento.Name</td>
                        <td>@elemento.Lastname</td>
                        <td>@elemento.SecondLastname</td>
                        <td>@elemento.Email</td>
                        <td><a href=""><img src="~/Content/Images/draw.svg" /></a></td>
                        <td><a href=""><img src="~/Content/Images/disabled.svg" /></a></td>
                    </tr>
                }
            </tbody>
        </table>
        <button class="btn btn-info float-right">Agregar Chofer</button>
    </div>

</div>
