@model List<SmartPayment.Models.ViewModels.ClientsTableViewModel>
@{
    ViewBag.Title = "Clientes";

}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Clientes</title>
</head>
<body>
    <div class="row mb-4">
        <div class="col-md-4">
            <a href="/Admin/Drivers" class="btn btn-outline-info col-md-12 btn-lg">CHOFERES</a>
        </div>
        <div class="col-md-4">
            <a href="/Admin/Clients" class="btn btn-info col-md-12 btn-lg">CLIENTES</a>
        </div>
        <div class="col-md-4">
            <a href="/Admin/Drivers" class="btn btn-outline-info col-md-12 btn-lg">RUTAS</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 table-responsive">
            <table class="table  table-striped table-hover">
                <thead class="thead-dark">
                    <tr class="text-center">
                        <th>Identificación</th>
                        <th>Correo Electrónico</th>
                        <th>Nombre</th>
                        <th>Primer Apellido</th>
                        <th>Segundo Apellido</th>
                        <th>Estado</th>
                        <th>Habilitar / Deshabilitar</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var elemento in Model)
                    {
                        <tr class="text-center">
                            <td>@elemento.Id</td>
                            <td>@elemento.Email</td>
                            <td>@elemento.Name</td>
                            <td>@elemento.Lastname</td>
                            <td>@elemento.SecondLastname</td>
                            <td>@(elemento.State ? "Activo" : "Desactivado")</td>
                            <td><a href="@Url.Action("DisableClient","Admin", new { id = @elemento.Id })"><img src="~/Content/Images/disabled.svg" /></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
   
    </div>
</body>
</html>
