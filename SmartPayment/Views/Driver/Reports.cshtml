@model dynamic
@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reports</title>
</head>
<body>
    <div class="row mb-4">
        <div class="offset-md-2">
        </div>
        <div class="col-md-4">
            <a href="/Driver/Index" class="btn btn-outline-info col-md-12 btn-lg">INCIO</a>
        </div>
        <div class="col-md-4">
            <a href="/Driver/Reports" class="btn btn-info col-md-12 btn-lg">REPORTES</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-7 table-responsive">
            <h2 class="text-center mb-5">Clientes Rechazados</h2>
            <table class="table  table-striped table-hover">
                <thead class="thead-dark">
                    <tr class="text-center">
                        <th>ID Pago</th>
                        <th>ID Cliente</th>
                        <th>Fecha</th>
                        <th>Estado del Pago</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var elemento in Model.Reportes)
                    {
                        <tr class="text-center">
                            <td>@elemento.Id</td>
                            <td>@elemento.Id_Client </td>
                            <td>@elemento.DateOfPayment</td>
                            <td>@(elemento.State ? "Rechazado" : "Aceptado")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-4 offset-md-1">
            <h2 class="text-center mb-5">Ganancias del Día</h2>
            <h2 class="display-4 text-center border border-info"><span>₡</span>@ViewData["ganancia"]</h2>

            <table class="table  table-striped table-hover mt-5">
                <thead class="thead-dark">
                    <tr class="text-center">
                        <th>ID Pago</th>
                        <th>Fecha</th>
                        <th>Costo</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var elemento in Model.Ganancias)
                    {
                    <tr class="text-center">
                        <td>@elemento.Id</td>
                        <td>@elemento.DateOfPayment</td>
                        <td>@elemento.Costo </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>

        </div>
</body>
</html>
